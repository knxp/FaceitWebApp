@inherits LayoutComponentBase

<div class="video-background">
    <video autoplay muted loop playsinline id="bgVideo">
        <source src="/videos/long.mp4" type="video/mp4">
    </video>
</div>

<PageTitle>MaxFaceitStats Web App</PageTitle>
<NavigationTracker />

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Max Faceit Stats</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <NavLink class="nav-link" href="">Home</NavLink>
                </li>
                <li class="nav-item dropdown">
                    <NavLink class="nav-link" href="player-stats">Player Stats</NavLink>
                    <div class="dropdown-menu" aria-labelledby="playerStatsDropdown">
                        <NavLink class="dropdown-item" href="player-stats">Basic Stats</NavLink>
                        <NavLink class="dropdown-item" href="player-detailed-stats">Detailed Stats</NavLink>
                        <NavLink class="dropdown-item" href="player-league-stats">League Stats</NavLink>
                    </div>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="team-stats">Team Stats</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="match-stats">Match Stats</NavLink>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link" href="compare-players" id="compareDropdown">Compare</a>
                    <div class="dropdown-menu" aria-labelledby="compareDropdown">
                        <NavLink class="dropdown-item" href="compare-players">Players</NavLink>
                        <NavLink class="dropdown-item" href="compare-teams">Teams</NavLink>
                    </div>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="faq">FAQ</NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    @Body
</div>

<style>
    .video-background {
        position: fixed;
        right: 0;
        bottom: 0;
        min-width: 100%;
        min-height: 100%;
        z-index: -1;
    }

    .video-background video {
        position: fixed;
        right: 0;
        bottom: 0;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        object-fit: cover;
        opacity: 0.3;
    }

    /* Optional: Add a dark overlay to ensure text readability */
    .video-background::after {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        /* Adjust opacity as needed */
        z-index: -1;
    }

    /* Remove the existing background from body */
    body {
        margin: 0;
        color: #e0e0e0;
        font-family: 'TolyerNo1', sans-serif;
    }

    .navbar {
        background-color: rgb(51, 51, 51);
        border-bottom: 2px solid #fd7d27;
        padding: 0.8rem 1rem;
        min-height: 80px;
        opacity: 0.85;
    }

    .navbar-brand,
    .nav-link {
        color: #fd7d27 !important;
        font-family: 'TolyerNo1', sans-serif;
        font-size: 2rem;
        transition: opacity 0.3s;
        padding: 0.5rem 1rem;
    }

    .navbar-brand {
        font-size: 2.5rem;
    }

    .nav-link:hover {
        opacity: 0.8;
    }

    .navbar-nav {
        margin-left: 20px;
        align-items: center;
    }

    .nav-item {
        margin-right: 25px;
    }

    .container {
        max-width: 960px;
    }

    .dropdown:hover .dropdown-menu {
        display: block;
    }

    .dropdown-menu {
        background-color: #333;
        border: 1px solid #fd7d27;
        margin-top: 0;
        padding: 0.5rem 0;
    }

    .dropdown-item {
        color: #fd7d27 !important;
        font-family: 'TolyerNo1', sans-serif;
        font-size: 1.5rem;
        transition: background-color 0.3s;
        padding: 0.7rem 1.5rem;
    }

    .dropdown-item:hover {
        background-color: rgba(253, 125, 39, 0.2);
    }

    .card {
        background-color: rgba(255, 255, 255, 0.1);
        border: none;
        border-radius: 10px;
        transition: background-color 0.3s;
    }

    .card:hover {
        background-color: rgba(255, 255, 255, 0.15);
    }

    .card-header {
        background-color: rgba(0, 0, 0, 0.5);
        color: #fd7d27;
        font-weight: bold;
        text-transform: uppercase;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .btn-primary {
        background-color: #fd7d27;
        border: none;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #e65c00;
    }

    @@media(max - width: 991px) {
            .navbar-brand {
                font-size: 1.8rem;
            }

            .nav-link {
                font-size: 1.5rem;
                padding: 0.3rem 0.8rem;
            }

            .dropdown-menu {
                background-color: transparent;
                border: none;
                padding-left: 1rem;
            }

            .dropdown-item {
                font-size: 1.2rem;
                padding: 0.5rem 1rem;
            }

            .nav-item {
                margin-right: 0;
                margin-bottom: 0.5rem;
            }

            .navbar-collapse {
                padding: 1rem 0;
            }

            .container {
                padding: 0 15px;
            }
        }

        @@media(max - width: 576px) {
                .navbar-brand {
                    font-size: 1.5rem;
                }
            }
        </style>

        <script>
            document.getElementById('bgVideo').playbackRate = 0.7; // Adjust speed as needed (0.7 = 70% speed)
        </script>