@inherits LayoutComponentBase

<PageTitle>Faceit Web App</PageTitle>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Max Stats</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <NavLink class="nav-link" href="">Home</NavLink>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link" href="#" id="playerStatsDropdown">Player Stats</a>
                <div class="dropdown-menu" aria-labelledby="playerStatsDropdown">
                    <NavLink class="dropdown-item" href="player-stats">Basic Stats</NavLink>
                    <NavLink class="dropdown-item" href="player-detailed-stats">Detailed Stats</NavLink>
                    <NavLink class="dropdown-item" href="player-league-stats">League Stats</NavLink>
                </div>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="team-stats">Team Stats</NavLink>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link" href="#" id="compareDropdown">Compare</a>
                <div class="dropdown-menu" aria-labelledby="compareDropdown">
                    <NavLink class="dropdown-item" href="compare-players">Players</NavLink>
                    <NavLink class="dropdown-item" href="compare-teams">Teams</NavLink>
                </div>
            </li>
        </ul>
    </div>
</nav>

<div class="container mt-4">
    @Body
</div>

<style>
    body {
        background-color: #1e1e1e;
        color: #e0e0e0;
        font-family: 'TolyerNo1', sans-serif;
        margin: 0;
    }

    .navbar {
        background-color: #333;
        border-bottom: 2px solid #fd7d27;
        padding: 0.8rem 1rem;
        min-height: 80px;
    }

    .navbar-brand,
    .nav-link {
        color: #fd7d27 !important;
        font-family: 'TolyerNo1', sans-serif;
        font-size: 2rem;
        transition: opacity 0.3s;
        padding: 0.5rem 1rem;
    }

    .navbar-brand {
        font-size: 2.5rem;
    }

    .nav-link:hover {
        opacity: 0.8;
    }

    .navbar-nav {
        margin-left: 20px;
        align-items: center;
    }

    .nav-item {
        margin-right: 25px;
    }

    .container {
        max-width: 960px;
    }

    .dropdown:hover .dropdown-menu {
        display: block;
    }

    .dropdown-menu {
        background-color: #333;
        border: 1px solid #fd7d27;
        margin-top: 0;
        padding: 0.5rem 0;
    }

    .dropdown-item {
        color: #fd7d27 !important;
        font-family: 'TolyerNo1', sans-serif;
        font-size: 1.5rem;
        transition: background-color 0.3s;
        padding: 0.7rem 1.5rem;
    }

    .dropdown-item:hover {
        background-color: rgba(253, 125, 39, 0.2);
    }

    .card {
        background-color: rgba(255, 255, 255, 0.1);
        border: none;
        border-radius: 10px;
        transition: background-color 0.3s;
    }

    .card:hover {
        background-color: rgba(255, 255, 255, 0.15);
    }

    .card-header {
        background-color: rgba(0, 0, 0, 0.5);
        color: #fd7d27;
        font-weight: bold;
        text-transform: uppercase;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .btn-primary {
        background-color: #fd7d27;
        border: none;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #e65c00;
    }
</style>