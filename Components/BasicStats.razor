@using faceitApp.Models

<div class="basic-stats-container">
    <div class="basic-stats-column">
        <div class="basic-stat-row">
            <span class="basic-stat-label">Kills</span>
            <span class="basic-stat-value">@Stats.Kills.ToString("F2")</span>
        </div>
        <div class="basic-stat-row">
            <span class="basic-stat-label">Deaths</span>
            <span class="basic-stat-value">@Stats.Deaths.ToString("F2")</span>
        </div>
        <div class="basic-stat-row">
            <span class="basic-stat-label">Assists</span>
            <span class="basic-stat-value">@Stats.Assists.ToString("F2")</span>
        </div>
        <div class="basic-stat-row">
            <span class="basic-stat-label">K/D Ratio</span>
            <span class="basic-stat-value">@Stats.KDRatio.ToString("F2")</span>
        </div>
        <div class="basic-stat-row">
            <span class="basic-stat-label">K/R Ratio</span>
            <span class="basic-stat-value">@Stats.KRRRatio.ToString("F2")</span>
        </div>
        <div class="basic-stat-row">
            <span class="basic-stat-label">HS %</span>
            <span class="basic-stat-value">@Stats.HeadshotsPercentage.ToString("F2")%</span>
        </div>
        <div class="basic-stat-row">
            <span class="basic-stat-label">HS Per Game</span>
            <span class="basic-stat-value">@Stats.Headshots.ToString("F2")</span>
        </div>
        <div class="basic-stat-row">
            <span class="basic-stat-label">Triple Kills</span>
            <span class="basic-stat-value">@Stats.TripleKills.ToString("F2")</span>
        </div>
        <div class="basic-stat-row">
            <span class="basic-stat-label">Quadro Kills</span>
            <span class="basic-stat-value">@Stats.QuadroKills.ToString("F2")</span>
        </div>
        <div class="basic-stat-row">
            <span class="basic-stat-label">Penta Kills</span>
            <span class="basic-stat-value">@Stats.PentaKills.ToString("F2")</span>
        </div>
    </div>
</div>

<style>
    .basic-stats-container {
        background-color: #ffffff1a;
        border: 1px solid #fd7d27;
        border-radius: 10px;
        padding: 20px;
        width: 600px;
    }

    .basic-stats-column {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .basic-stat-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 5px;
        border-radius: 5px;
        transition: background-color 0.3s;
        border: 0.5px solid #ffffff1a;
    }

    .basic-stat-row:hover {
        background-color: rgba(255, 255, 255, 0.05);
    }

    .basic-stat-label {
        color: #ffffff;
        font-size: 1.8rem;
        font-family: 'TolyerNo1', sans-serif;
        letter-spacing: 0.5px;
        flex: 1;
        text-align: left;
    }

    .basic-stat-value {
        color: #fd7d27;
        font-size: 2.2rem;
        font-family: 'TolyerNo1', sans-serif;
        font-weight: bold;
        letter-spacing: 1px;
        flex: 1;
        text-align: right;
    }
</style>

@code {
    [Parameter]
    public Player Stats { get; set; }
}
