@using faceitWebApp.Models

<div class="league-detailed-stats-grid">
    <!-- Combat Stats -->
    <div class="league-detailed-stats-column">
        <h5>Combat Stats</h5>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Kills</span>
            <span class="league-detailed-stat-value">@Stats.Kills.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Deaths</span>
            <span class="league-detailed-stat-value">@Stats.Deaths.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Assists</span>
            <span class="league-detailed-stat-value">@Stats.Assists.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">ADR</span>
            <span class="league-detailed-stat-value">@Stats.ADR.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">HS %</span>
            <span class="league-detailed-stat-value">@Stats.HeadshotsPercentage.ToString("F2")%</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">K/D Ratio</span>
            <span class="league-detailed-stat-value">@Stats.KDRatio.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">K/R Ratio</span>
            <span class="league-detailed-stat-value">@Stats.KRRRatio.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">HS Per Game</span>
            <span class="league-detailed-stat-value">@Stats.Headshots.ToString("F2")</span>
        </div>
    </div>

    <!-- Entry Stats -->
    <div class="league-detailed-stats-column">
        <h5>Entry Stats</h5>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Entry Attempts</span>
            <span class="league-detailed-stat-value">@Stats.EntryCount.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Entry Rate</span>
            <span class="league-detailed-stat-value">@Stats.MatchEntryRate.ToString("F2")%</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">First Kills</span>
            <span class="league-detailed-stat-value">@Stats.FirstKills.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Entry Success Rate</span>
            <span class="league-detailed-stat-value">@Stats.MatchEntrySuccessRate.ToString("F2")%</span>
        </div>
    </div>

    <!-- Clutch Stats -->
    <div class="league-detailed-stats-column">
        <h5>Clutch Stats</h5>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">1v1 Chances</span>
            <span class="league-detailed-stat-value">@Stats.OneVOneCount.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">1v1 Wins</span>
            <span class="league-detailed-stat-value">@Stats.OneVOneWins.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">1v1 Win Rate</span>
            <span class="league-detailed-stat-value">@(Stats.OneVOneCount > 0 ? (Stats.OneVOneWins / Stats.OneVOneCount
                * 100).ToString("F2") : "0.00")%</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">1v2 Chances</span>
            <span class="league-detailed-stat-value">@Stats.OneVTwoCount.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">1v2 Wins</span>
            <span class="league-detailed-stat-value">@Stats.OneVTwoWins.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">1v2 Win Rate</span>
            <span class="league-detailed-stat-value">@(Stats.OneVTwoCount > 0 ? (Stats.OneVTwoWins / Stats.OneVTwoCount
                * 100).ToString("F2") : "0.00")%</span>
        </div>
    </div>

    <!-- Weapon Stats -->
    <div class="league-detailed-stats-column">
        <h5>Weapon Stats</h5>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Pistol Kills</span>
            <span class="league-detailed-stat-value">@Stats.PistolKills.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Pistol Kill Rate</span>
            <span class="league-detailed-stat-value">@(Stats.Kills > 0 ? (Stats.PistolKills / Stats.Kills *
                100).ToString("F2") : "0.00")%</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Sniper Kills</span>
            <span class="league-detailed-stat-value">@Stats.SniperKills.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Sniper Kill Rate</span>
            <span class="league-detailed-stat-value">@(Stats.Kills > 0 ? (Stats.SniperKills / Stats.Kills *
                100).ToString("F2") : "0.00")%</span>
        </div>
    </div>

    <!-- Utility Stats -->
    <div class="league-detailed-stats-column">
        <h5>Utility Stats</h5>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Flash Thrown</span>
            <span class="league-detailed-stat-value">@Stats.FlashCount.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Flash Success</span>
            <span class="league-detailed-stat-value">@Stats.FlashSuccesses.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Enemies Flashed</span>
            <span class="league-detailed-stat-value">@Stats.EnemiesFlashed.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Flash Success Rate</span>
            <span class="league-detailed-stat-value">@(Stats.FlashCount > 0 ? (Stats.FlashSuccesses / Stats.FlashCount *
                100).ToString("F2") : "0.00")%</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Utility Damage</span>
            <span class="league-detailed-stat-value">@Stats.UtilityDamage.ToString("F2")</span>
        </div>
        <div class="league-detailed-stat-row">
            <span class="league-detailed-stat-label">Utility Success</span>
            <span class="league-detailed-stat-value">@Stats.UtilitySuccesses.ToString("F2")</span>
        </div>
    </div>
</div>

<style>
    
    .league-detailed-stats-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 30px;
    }

    .league-detailed-stats-column h5 {
        color: #ffffff;
        font-size: 2.2rem;
        text-align: center;
        margin-bottom: 20px;
        font-family: 'TolyerNo1', sans-serif;
        letter-spacing: 1px;
    }

    .league-detailed-stat-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
        padding: 8px 5px;
        border-radius: 5px;
        transition: background-color 0.3s;
        border: 0.5px solid #ffffff1a;
    }

    .league-detailed-stat-row:hover {
        background-color: rgba(255, 255, 255, 0.05);
    }

    .league-detailed-stat-label {
        color: #ffffff;
        font-size: 1.4rem;
        font-family: 'TolyerNo1', sans-serif;
        letter-spacing: 0.5px;
        flex: 1;
        text-align: left;
    }

    .league-detailed-stat-value {
        color: #fd7d27;
        font-size: 1.6rem;
        font-family: 'TolyerNo1', sans-serif;
        font-weight: bold;
        letter-spacing: 1px;
        flex: 1;
        text-align: right;
    }
</style>

@code {
    [Parameter]
    public Player Stats { get; set; }
}
